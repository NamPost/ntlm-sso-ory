{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["es2020", "DOM"],
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest",  "node"],
        "typeRoots": [
            "./node_modules/@types",
            "./test"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
